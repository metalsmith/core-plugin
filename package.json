{
  "name": "@metalsmith/~core-plugin~",
  "private": true,
  "version": "0.1.0",
  "description": "A Metalsmith plugin to ...",
  "keywords": [
    "~core-plugin~",
    "metalsmith-plugin",
    "metalsmith",
    "static-site"
  ],
  "source": "src/index.js",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "type": "module",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metalsmith/~core-plugin~.git"
  },
  "files": [
    "lib"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "author": "Kevin Van Lierde (https://webketje.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metalsmith/~core-plugin~/issues"
  },
  "homepage": "https://github.com/metalsmith/~core-plugin~#readme",
  "dependencies": {
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "metalsmith": "^2.5.1",
    "microbundle": "^0.15.1",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.8.1",
    "release-it": "^15.5.1"
  },
  "peerDependencies": {
    "metalsmith": "^2.5.0"
  },
  "scripts": {
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "npm run build && release-it .",
    "build": "microbundle --target node --no-sourcemap -f cjs,esm",
    "pretest": "npm run build",
    "test": "nyc mocha"
  },
  "engines": {
    "node": ">=12.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
